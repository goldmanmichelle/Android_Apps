<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.michellegoldman.truthortale.CategoryActivity"
    tools:showIn="@layout/activity_category">


    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/truth_or_tale_logo3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/category_desc_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/category_desc"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:singleLine="false"
        android:background="#cdcaca" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:weightSum="2">

                <ImageButton
                    android:id="@+id/startButton"
                    android:src="@drawable/button_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:layout_gravity="left" />

    </LinearLayout>
</LinearLayout>
